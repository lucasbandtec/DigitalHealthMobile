<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceitaAVisualizarDescricaoActivity"
    android:background="@color/background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/receita_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receita A"
        android:textColor="@color/branco"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="50dp"
        android:layout_height="85dp"
        android:src="@drawable/icon_voltar"
        android:id="@+id/btn_voltar"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/receita_c"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/margin_top"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".12"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/margin_bot"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".96"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visualizar_descricao"
        android:background="@drawable/fundo_receita_a"
        app:layout_constraintBottom_toTopOf="@+id/btn_proximo"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_proximo"
        android:id="@+id/btn_proximo"
        android:text="Proximo"
        app:layout_constraintBottom_toBottomOf="@+id/margin_bot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="irTelaResponsavelLegalReceitaA"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Telefone"
        android:textStyle="bold"
        android:textColor="@color/preto"
        android:id="@+id/text_telefone"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_telefone"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"

        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="(11) 98888-7777"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_telefone"
        app:layout_constraintBottom_toBottomOf="@+id/visualizar_descricao"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rua Haddock Lobo, 22"
        android:textSize="20sp"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_endereco"
        app:layout_constraintBottom_toTopOf="@+id/text_telefone"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="EndereÃ§o"
        android:textStyle="bold"
        android:textColor="@color/preto"
        android:id="@+id/text_endereco"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_endereco"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"
        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="111.222.333-44"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_cpf"
        app:layout_constraintBottom_toTopOf="@+id/text_endereco"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="CPF"
        android:textStyle="bold"
        android:textColor="@color/preto"
        android:id="@+id/text_cpf"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_cpf"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"

        android:layout_marginLeft="20dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Barbara Soares"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_paciente"
        app:layout_constraintBottom_toTopOf="@+id/text_cpf"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:text="Paciente"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_paciente"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="SP"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_uf"
        app:layout_constraintBottom_toTopOf="@+id/text_paciente"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/text_uf"
        android:layout_marginLeft="20dp"
        android:text="UF"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_uf"
        app:layout_constraintLeft_toLeftOf="@+id/visualizar_descricao" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="DF343"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_rc"
        app:layout_constraintBottom_toTopOf="@+id/text_paciente"
        app:layout_constraintLeft_toLeftOf="@+id/text_descricao_uf"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="100dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/text_rc"
        android:text="RC"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_rc"
        app:layout_constraintLeft_toLeftOf="@+id/text_uf"
        android:layout_marginLeft="100dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="32423432"
        android:textColor="@color/preto"
        android:id="@+id/text_descricao_crm"
        app:layout_constraintBottom_toTopOf="@+id/text_paciente"
        app:layout_constraintLeft_toLeftOf="@+id/text_descricao_rc"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="100dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/text_crm"
        android:text="CRM"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_descricao_rc"
        app:layout_constraintLeft_toLeftOf="@+id/text_rc"
        android:layout_marginLeft="100dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>